<%= form_for(@transaction, html: {class: "form-horizontal"}) do |f| %>
  <div class="container-fluid">
    <!-- <div class="row main col-lg-12"> -->
    <h3 class="page-header">Transaction Form</h3>
    <div class="form-group">
      <label class="col-sm-3 control-label">
        <%= f.label :trans_amount %>
      </label>
      <div class="col-sm-3">
        <%= f.text_field :trans_amount, class: "form-control", required: :required, placeholder: "Transaction Amount" %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">
        <%= f.label :trans_type %>
      </label>
      <div class="col-sm-3">
        <%= f.text_field :trans_type, class: "form-control", required: :required, placeholder: "Transaction type" %>
      </div>
    </div>
    <div class="col-lg-12">
      <div class="form-group">
        <%= f.submit class: "btn btn-primary col-xs-offset-3" %>
        <%= link_to "Back", transactions_path, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
<%end%>