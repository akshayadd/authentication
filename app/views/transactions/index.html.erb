<ul class="breadcrumb">
  <li><a href="<%= root_path %>"><span class="fa fa-home fa-fw"></span></a></li>
  <li><%= link_to "Transactions", transactions_path %></li>
</ul>
<div class="container-fluid">
  <button class= "btn btn-default pull-right"><%= link_to "New", new_transaction_path %></button>
  <div class="row top15">
    <div class="col-sm-12">
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>User</th>
              <th>Type</th>
              <th>Amount</th>
              <th>Date</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% @transactions.each do |t| %>
              <tr>
                <td><%= t.try(:user).try(:firstname) %></td>
                <td><%= t.trans_type %></td>
                <td><%= t.trans_amount %></td>
                <td><%= t.created_at %></td>
                <td class="vert-aling">
                <%= link_to transaction_path(t),class: "btn btn-info btn-xs" do %><i class="fa fa-eye fa-fw"></i>&nbsp;View<% end%>
                <%= link_to edit_transaction_path(t),class: "btn btn-warning btn-xs" do %><i class="fa fa-pencil fa-fw"></i>&nbsp;Edit<% end%>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>